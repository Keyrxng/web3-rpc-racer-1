{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {},
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.d.ts",
    "tests",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib",
    "dist"
  ]
}